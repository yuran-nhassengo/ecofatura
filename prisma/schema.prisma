// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Factura {
  id        String     @id @default(cuid())
  codigo    String
  nome      String
  tipo      String
  data      String
  entidade  String
  valor     Int
  descricao String
  nuit      Int?  
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())  
  produtos    Produto[] // Relacionamento com os produtos (um para muitos)
}

model Produto {
  id          String    @id @default(cuid()) // Identificador único
  nome        String    // Nome do produto
  quantidade  Int       // Quantidade do produto
  valor       Float     // Valor unitário do produto
  total       Float     // Total do produto (quantidade * valor)
  facturaId   String    // Relacionamento com a fatura
  factura     Factura   @relation(fields: [facturaId], references: [id]) // Relacionamento com a fatura
}


model Usuario {

  id              String @id @default(cuid())
  nome            String
  email           String
  dataNascimento  String
  senha           String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())
}